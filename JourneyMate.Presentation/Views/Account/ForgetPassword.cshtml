@model ForgetVm
@{
    ViewData["Title"] = "ForgetPassword";
	Layout = "~/Views/Shared/_AuthLayout.cshtml";
}
<style>
        body {
            background-color: #f8f9fa;
            font-family: 'Arial', sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }

        .reset-password-container {
            background: #ffffff;
            padding: 2.5rem;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            max-width: 450px;
            width: 100%;
            text-align: center;
        }

        h1 {
            color: #333;
            margin-bottom: 1.5rem;
            font-size: 2rem;
        }

        .form-control {
            border-radius: 5px;
            padding: 12px;
            font-size: 16px;
            margin-bottom: 1.2rem;
            width: 100%;
        }

        .form-control:focus {
            border-color: #0d6efd;
            box-shadow: 0 0 5px rgba(13, 110, 253, 0.5);
        }

        .btn-primary {
            background-color: #0d6efd;
            border: none;
            padding: 12px 20px;
            border-radius: 5px;
            font-size: 16px;
            cursor: pointer;
            transition: background-color 0.3s ease;
            width: 100%;
        }

        .btn-primary:hover {
            background-color: #0b5ed7;
        }

        .text-danger {
            color: #dc3545;
            font-size: 14px;
            margin-top: 0.5rem;
        }
    </style>

    <div class="reset-password-container">
        <h1>Reset Password Using Email</h1>
        <hr />
    <form asp-action="SendResetPasswordUrl" asp-controller="Account" method="post">
            <div asp-validation-summary="All" class="text-danger mb-3"></div>

            <!-- Email Field -->
            <div class="mb-3">
                <input asp-for="Email" class="form-control" placeholder="Enter your email" required>
            </div>

            <!-- Submit Button -->
            <button type="submit" class="btn btn-primary">Reset Password by Email</button>
        </form>
    </div>

  
    @section ValidationScriptSection {
        <partial name="_ValidationScriptsPartial" />
    }

