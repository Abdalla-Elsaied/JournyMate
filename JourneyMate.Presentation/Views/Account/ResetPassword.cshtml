@model ResetPasswordVm
@{
    ViewData["Title"] = "Reset Password";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}
    <style>
        body {
            background-color: #f8f9fa;
            font-family: 'Arial', sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }

        .reset-password-container {
            background: #ffffff;
            padding: 2.5rem;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            max-width: 450px;
            width: 100%;
            text-align: center;
        }

        h1 {
            color: #333;
            margin-bottom: 1.5rem;
            font-size: 2rem;
        }

        .form-control {
            border-radius: 5px;
            padding: 12px;
            font-size: 16px;
            margin-bottom: 1.2rem;
            width: 100%;
        }

        .form-control:focus {
            border-color: #0d6efd;
            box-shadow: 0 0 5px rgba(13, 110, 253, 0.5);
        }

        .btn-primary {
            background-color: #0d6efd;
            border: none;
            padding: 12px 20px;
            border-radius: 5px;
            font-size: 16px;
            cursor: pointer;
            transition: background-color 0.3s ease;
            width: 100%;
        }

        .btn-primary:hover {
            background-color: #0b5ed7;
        }

        .text-danger {
            color: #dc3545;
            font-size: 14px;
            margin-top: 0.5rem;
        }

        .password-toggle {
            position: relative;
        }

        .password-toggle .toggle-icon {
            position: absolute;
            right: 12px;
            top: 50%;
            transform: translateY(-50%);
            cursor: pointer;
            color: #777;
            font-size: 18px;
        }

        .password-toggle .toggle-icon:hover {
            color: #333;
        }
    </style>


    <div class="reset-password-container">
        <h1>Reset Password</h1>
        <hr />
        <form asp-action="ResetPassword" method="post">
            <div asp-validation-summary="All" class="text-danger mb-3"></div>

            <!-- New Password Field with Toggle -->
            <div class="mb-3 password-toggle">
                <input asp-for="NewPassword" type="password" class="form-control" id="newPassword" placeholder="New Password" required>
                <span class="toggle-icon" onclick="togglePassword('newPassword')">👁️</span>
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>

            <!-- Confirm Password Field with Toggle -->
            <div class="mb-3 password-toggle">
                <input asp-for="ConfirmPassword" type="password" class="form-control" id="confirmPassword" placeholder="Confirm Password" required>
                <span class="toggle-icon" onclick="togglePassword('confirmPassword')">👁️</span>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <!-- Submit Button -->
            <button type="submit" class="btn btn-primary">Change Password</button>
        </form>
    </div>
    <!-- Custom JavaScript -->
    <script>
        // Function to toggle password visibility
        function togglePassword(fieldId) {
            const passwordInput = document.getElementById(fieldId);
            const toggleIcon = passwordInput.nextElementSibling;

            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                toggleIcon.textContent = '👁️‍🗨️'; // Open eye icon
            } else {
                passwordInput.type = 'password';
                toggleIcon.textContent = '👁️'; // Closed eye icon
            }
        }
    </script>

    <!-- Validation Scripts -->
    @section ValidationScriptSection {
        <partial name="_ValidationScriptsPartial" />
    }
