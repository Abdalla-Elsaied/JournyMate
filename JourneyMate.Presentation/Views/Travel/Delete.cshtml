@model JourneyMate.Application.ViewModel.TravelVm
@{
    ViewBag.Title = "Confirm Delete - Travel";
    Layout = "~/Views/Shared/_CompanyLayout.cshtml";
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">

<style>
    body {
        background-color: #f8f9fa;
    }

    .delete-container {
        max-width: 600px;
        margin: 50px auto;
        padding: 30px;
        background: white;
        border-radius: 12px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.1);
    }

    .warning-header {
        text-align: center;
        margin-bottom: 30px;
    }

    .warning-icon {
        width: 80px;
        height: 80px;
        background: linear-gradient(135deg, #ff6b6b, #ee5a52);
        color: white;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 20px;
        font-size: 2.5rem;
        animation: pulse 2s infinite;
    }

    @@keyframes pulse {
        0%

    {
        transform: scale(1);
    }

    50% {
        transform: scale(1.05);
    }

    100% {
        transform: scale(1);
    }

    }

    .travel-card {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        border-radius: 12px;
        padding: 25px;
        margin: 25px 0;
        position: relative;
        overflow: hidden;
    }

        .travel-card::before {
            content: '';
            position: absolute;
            top: 0;
            right: 0;
            width: 100px;
            height: 100px;
            background: rgba(255,255,255,0.1);
            border-radius: 50%;
            transform: translate(30px, -30px);
        }

    .travel-title {
        font-size: 1.5rem;
        font-weight: 600;
        margin-bottom: 15px;
        position: relative;
        z-index: 2;
    }

    .travel-info {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 15px;
        position: relative;
        z-index: 2;
    }

    .info-item {
        display: flex;
        align-items: center;
        font-size: 0.95rem;
    }

        .info-item i {
            margin-right: 8px;
            width: 16px;
            opacity: 0.9;
        }

    .warning-text {
        background: #fff3cd;
        border: 1px solid #ffeaa7;
        border-radius: 8px;
        padding: 15px;
        color: #856404;
        margin: 20px 0;
    }

    .action-buttons {
        display: flex;
        gap: 15px;
        justify-content: center;
        margin-top: 30px;
    }

    .btn-delete {
        background: linear-gradient(135deg, #ff6b6b, #ee5a52);
        border: none;
        padding: 12px 30px;
        font-weight: 600;
        border-radius: 8px;
        color: white;
        transition: all 0.3s ease;
    }

        .btn-delete:hover {
            background: linear-gradient(135deg, #ee5a52, #dd4b4b);
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(238, 90, 82, 0.4);
            color: white;
        }

    .btn-cancel {
        background: #6c757d;
        border: none;
        padding: 12px 30px;
        font-weight: 600;
        border-radius: 8px;
        color: white;
        transition: all 0.3s ease;
        text-decoration: none;
    }

        .btn-cancel:hover {
            background: #5a6268;
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(108, 117, 125, 0.4);
            color: white;
        }

    .loading-overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0,0,0,0.5);
        display: none;
        align-items: center;
        justify-content: center;
        z-index: 9999;
    }

    .loading-spinner {
        background: white;
        padding: 30px;
        border-radius: 12px;
        text-align: center;
    }

    @@media (max-width: 768px) {
        .delete-container

    {
        margin: 20px;
        padding: 20px;
    }

    .travel-info {
        grid-template-columns: 1fr;
    }

    .action-buttons {
        flex-direction: column;
    }

    .btn-delete, .btn-cancel {
        width: 100%;
        text-align: center;
    }

    }
</style>

<div class="container-fluid">
    <div class="delete-container">
        <div class="warning-header">
            <div class="warning-icon">
                <i class="fas fa-exclamation-triangle"></i>
            </div>
            <h2 class="text-danger">Confirm Deletion</h2>
            <p class="text-muted mb-0">Are you sure you want to delete this travel package?</p>
        </div>

        <!-- Travel Information Card -->
        <div class="travel-card">
            <h3 class="travel-title">
                <i class="fas fa-map-marked-alt me-2"></i>
                @Model.Title
            </h3>
            <div class="travel-info">
                <div class="info-item">
                    <i class="fas fa-map-marker-alt"></i>
                    <span><strong>From:</strong> @Model.DeparturePoint</span>
                </div>
                <div class="info-item">
                    <i class="fas fa-location-dot"></i>
                    <span><strong>To:</strong> @Model.DestinationCity</span>
                </div>
                <div class="info-item">
                    <i class="fa-solid fa-play"></i>
                    <span><strong>Start:</strong> @Model.StartDate.ToString("MMM dd, yyyy")</span>
                </div>
                <div class="info-item">
                    <i class="fa-solid fa-hourglass-end"></i>
                    <span><strong>End:</strong> @Model.EndDate.ToString("MMM dd, yyyy")</span>
                </div>
                <div class="info-item">
                    <i class="fas fa-dollar-sign"></i>
                    <span><strong>Price:</strong> $@Model.Price.ToString("N2")</span>
                </div>
                <div class="info-item">
                    <i class="fas fa-users"></i>
                    <span><strong>Available:</strong> @Model.AvailableSeats seats</span>
                </div>
                <div class="info-item">
                    <i class="fas fa-bus"></i>
                    <span><strong>Transport:</strong> @Model.TransportationType</span>
                </div>
                <div class="info-item">
                    <i class="fas fa-building"></i>
                    <span><strong>Company:</strong> @Model.CompanyName</span>
                </div>
            </div>
        </div>

        <!-- Warning Message -->
        <div class="warning-text">
            <i class="fas fa-info-circle me-2"></i>
            <strong>Warning:</strong> This action cannot be undone. All associated bookings, reviews, and data will be permanently removed.
        </div>

        <!-- Action Buttons -->
        <div class="action-buttons">
            @using (Html.BeginForm("DeleteConfirmed", "Travel", FormMethod.Post, new { @class = "d-inline" }))
            {
                @Html.AntiForgeryToken()
                @Html.Hidden("id", Model.Id)
                <button type="submit" class="btn-delete" onclick="showLoading()">
                    <i class="fas fa-trash me-2"></i>
                    Yes, Delete Travel
                </button>
            }
            @Html.ActionLink("Cancel", "Index", "Travel", null, new { @class = "btn-cancel" })
        </div>
    </div>
</div>

<!-- Loading Overlay -->
<div class="loading-overlay" id="loadingOverlay">
    <div class="loading-spinner">
        <div class="spinner-border text-danger mb-3" role="status"></div>
        <div>Deleting travel package...</div>
    </div>
</div>

<script>
    function showLoading() {
        document.getElementById('loadingOverlay').style.display = 'flex';
    }

    // Add confirmation dialog for extra safety
    document.querySelector('.btn-delete').addEventListener('click', function(e) {
        const confirmed = confirm('Are you absolutely sure you want to delete this travel package? This action cannot be undone.');
        if (!confirmed) {
            e.preventDefault();
            document.getElementById('loadingOverlay').style.display = 'none';
        }
    });
</script>