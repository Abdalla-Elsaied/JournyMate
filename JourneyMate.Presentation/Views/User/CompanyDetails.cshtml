@model CompanyDetailsVM
@{
    ViewData["Title"] = "Company Details";
}

<style>
    .company-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 2rem;
        border-radius: 15px;
        margin-bottom: 2rem;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
    }

    .company-info-card {
        background: white;
        border-radius: 15px;
        padding: 2rem;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
        margin-bottom: 2rem;
        border: 1px solid #e3e6f0;
    }

    .info-item {
        display: flex;
        align-items: center;
        margin-bottom: 1rem;
        padding: 0.75rem;
        background: #f8f9fc;
        border-radius: 10px;
        border-left: 4px solid #667eea;
    }

    .info-icon {
        width: 20px;
        height: 20px;
        margin-right: 12px;
        color: #667eea;
    }

    .info-label {
        font-weight: 600;
        color: #5a5c69;
        margin-right: 10px;
        min-width: 80px;
    }

    .info-value {
        color: #3a3b45;
        font-weight: 500;
    }

    .travels-section {
        background: white;
        border-radius: 15px;
        padding: 2rem;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
        margin-bottom: 2rem;
    }

    .travel-card {
        background: linear-gradient(145deg, #ffffff 0%, #f8f9fc 100%);
        border: 1px solid #e3e6f0;
        border-radius: 12px;
        padding: 1.5rem;
        margin-bottom: 1.5rem;
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
    }

        .travel-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 4px;
            height: 100%;
            background: linear-gradient(135deg, #667eea, #764ba2);
        }

        .travel-card:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
        }

    .travel-header {
        display: flex;
        justify-content: between;
        align-items: flex-start;
        margin-bottom: 1rem;
        flex-wrap: wrap;
        gap: 1rem;
    }

    .travel-title {
        font-size: 1.25rem;
        font-weight: 700;
        color: #2c3e50;
        margin: 0;
        flex: 1;
    }

    .travel-price {
        background: linear-gradient(135deg, #667eea, #764ba2);
        color: white;
        padding: 0.5rem 1rem;
        border-radius: 25px;
        font-weight: 700;
        font-size: 1.1rem;
        box-shadow: 0 2px 10px rgba(102, 126, 234, 0.3);
    }

    .travel-meta {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 1rem;
        margin-top: 1rem;
    }

    .meta-item {
        display: flex;
        align-items: center;
        color: #6c757d;
        font-size: 0.9rem;
    }

    .meta-icon {
        width: 16px;
        height: 16px;
        margin-right: 8px;
        color: #667eea;
    }

    .travel-description {
        color: #5a5c69;
        line-height: 1.6;
        margin: 1rem 0;
        font-size: 0.95rem;
    }

    .status-badge {
        display: inline-block;
        padding: 0.25rem 0.75rem;
        border-radius: 20px;
        font-size: 0.8rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .status-active {
        background: #d4edda;
        color: #155724;
        border: 1px solid #c3e6cb;
    }

    .status-inactive {
        background: #f8d7da;
        color: #721c24;
        border: 1px solid #f1b0b7;
    }

    .action-buttons {
        display: flex;
        gap: 1rem;
        margin-top: 2rem;
        flex-wrap: wrap;
    }

    .btn-modern {
        padding: 0.75rem 2rem;
        border-radius: 25px;
        font-weight: 600;
        text-decoration: none;
        transition: all 0.3s ease;
        border: none;
        position: relative;
        overflow: hidden;
    }

    .btn-primary-modern {
        background: linear-gradient(135deg, #667eea, #764ba2);
        color: white;
        box-shadow: 0 4px 15px rgba(102, 126, 234, 0.3);
    }

        .btn-primary-modern:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(102, 126, 234, 0.4);
            color: white;
            text-decoration: none;
        }

    .btn-secondary-modern {
        background: #f8f9fc;
        color: #5a5c69;
        border: 2px solid #e3e6f0;
    }

        .btn-secondary-modern:hover {
            background: #e3e6f0;
            color: #5a5c69;
            text-decoration: none;
            transform: translateY(-1px);
        }

    .no-travels {
        text-align: center;
        padding: 3rem;
        color: #6c757d;
        font-style: italic;
    }

    .section-title {
        font-size: 1.5rem;
        font-weight: 700;
        color: #2c3e50;
        margin-bottom: 1.5rem;
        display: flex;
        align-items: center;
    }

        .section-title::before {
            content: '';
            width: 4px;
            height: 30px;
            background: linear-gradient(135deg, #667eea, #764ba2);
            margin-right: 15px;
            border-radius: 2px;
        }

    @@media (max-width: 768px) {
        .company-header

    {
        padding: 1.5rem;
    }

    .travel-header {
        flex-direction: column;
        align-items: flex-start;
    }

    .travel-meta {
        grid-template-columns: 1fr;
    }

    .action-buttons {
        flex-direction: column;
    }

    }
</style>

<div class="container-fluid">
    <!-- Company Header -->
    <div class="company-header">
        <h1 class="mb-0" style="font-size: 2.5rem; font-weight: 700;">
            @Model.Name
        </h1>
        <p class="mb-0 mt-2" style="font-size: 1.1rem; opacity: 0.9;">
            Company Details & Travel Offerings
        </p>
    </div>

    <!-- Company Information Card -->
    <div class="company-info-card">
        <h2 class="section-title">Company Information</h2>

        <div class="row">
            <div class="col-md-6">
                <div class="info-item">
                    <svg class="info-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"></path>
                    </svg>
                    <span class="info-label">ID:</span>
                    <span class="info-value">@Model.Id</span>
                </div>
            </div>

            <div class="col-md-6">
                <div class="info-item">
                    <svg class="info-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                    </svg>
                    <span class="info-label">Email:</span>
                    <span class="info-value">@Model.Email</span>
                </div>
            </div>

            <div class="col-md-6">
                <div class="info-item">
                    <svg class="info-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                    </svg>
                    <span class="info-label">Phone:</span>
                    <span class="info-value">@Model.phoneNumber</span>
                </div>
            </div>

            <div class="col-md-6">
                <div class="info-item">
                    <svg class="info-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                    <span class="info-label">Status:</span>
                    <span class="status-badge @(Model.IsActive ? "status-active" : "status-inactive")">
                        @(Model.IsActive ? "Active" : "Inactive")
                    </span>
                </div>
            </div>
        </div>
    </div>

    <!-- Travels Section -->
    <div class="travels-section">
        <h2 class="section-title">Travel Packages (@Model.Travels.Count())</h2>

        @if (Model.Travels.Any())
        {
            <div class="row">
                @foreach (var travel in Model.Travels)
                {
                    <div class="col-lg-6 col-xl-4 mb-4">
                        <div class="travel-card h-100">
                            <div class="travel-header">
                                <h3 class="travel-title">@travel.Title</h3>
                                <div class="travel-price">@travel.Price.ToString("C")</div>
                            </div>

                            @if (!string.IsNullOrEmpty(travel.Description))
                            {
                                <p class="travel-description">
                                    @(travel.Description.Length > 120 ? travel.Description.Substring(0, 120) + "..." : travel.Description)
                                </p>
                            }

                            <div class="travel-meta">
                                <div class="meta-item">
                                    <svg class="meta-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                                    </svg>
                                    <span>Created: @travel.CreationDate.ToString("MMM dd, yyyy")</span>
                                </div>

                                @if (travel.StartDate != default(DateTime))
                                {
                                    <div class="meta-item">
                                        <svg class="meta-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                        </svg>
                                        <span>Starts: @travel.StartDate.ToString("MMM dd, yyyy")</span>
                                    </div>
                                }

                                @if (travel.AvailableSeats > 0)
                                {
                                    <div class="meta-item">
                                        <svg class="meta-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                                        </svg>
                                        <span>@travel.AvailableSeats seats available</span>
                                    </div>
                                }

                                @if (!string.IsNullOrEmpty(travel.TransportationType))
                                {
                                    <div class="meta-item">
                                        <svg class="meta-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
                                        </svg>
                                        <span>@travel.TransportationType</span>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="no-travels">
                <svg width="64" height="64" fill="none" stroke="currentColor" viewBox="0 0 24 24" style="margin-bottom: 1rem; opacity: 0.5;">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.172 16.172a4 4 0 015.656 0M9 12h6m-6-4h6m2 5.291A7.962 7.962 0 0112 15c-2.34 0-4.291-1.007-5.824-2.562M15 9.34c0-1.21-.999-2.34-2.333-2.34h-1.334C10.999 7 10 8.13 10 9.34v1.32c0 .705.327 1.34.847 1.707.173.12.36.209.566.249M19 14l-2-2m0 0l-2-2m2 2l2-2m-2 2l-2 2"></path>
                </svg>
                <p>No travel packages are currently available for this company.</p>
            </div>
        }
    </div>

    <!-- Action Buttons -->
    <div class="action-buttons">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn-modern btn-primary-modern">
            <svg width="16" height="16" fill="none" stroke="currentColor" viewBox="0 0 24 24" style="margin-right: 8px; display: inline-block;">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
            </svg>
            Edit Company
        </a>
        <a asp-action="Index" class="btn-modern btn-secondary-modern">
            <svg width="16" height="16" fill="none" stroke="currentColor" viewBox="0 0 24 24" style="margin-right: 8px; display: inline-block;">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
            </svg>
            Back to List
        </a>
    </div>
</div>